<apiConfig>

  <!--미리보기 편집기사목록 조회. id 수정하지 말것-->
  <api id="desking.work" expire="0">
    <description>미리보기용 편집기사 목록을 조회한다.</description>
    <parameter>
      <ids desc="데이타셋 아이디" hints="datasetSeqs" require="Y">^[0-9]{1,6}(,[0-9]{1,6})*$</ids>
      <regId desc="작업자ID" require="Y">[0-9|A-z]{1,20}</regId>
    </parameter>
    <request dmlType="sp" setNames="_DATA,RDATA">dps.wms.deskingWork</request>
    <request type="script" resultName="_TOTAL">
      var result = $ac.getAllResult();
      result.get("PARAM_MAP").get("total");
    </request>
    <keys>
      ids
      regId
      #paging
    </keys>
  </api>

  <api id="rcvArticle" expire="0">
    <description>수신기사 기본 정보를 조회한다.</description>
    <parameter>
      <rid desc="수신기사Id">[0-9]{1,9}</rid>
    </parameter>
    <request resultName="BASIC">dps.wms.rcvArticle.basic</request>
    <request resultName="CONTENT">dps.wms.rcvArticle.content</request>
    <request resultName="REPORTER">dps.wms.rcvArticle.reporter</request>
    <request resultName="MASTERCODE">dps.wms.rcvArticle.mastercode</request>
    <request resultName="SERVICEMAP">dps.wms.rcvArticle.servicemap</request>
    <request resultName="KEYWORD">dps.wms.rcvArticle.keyword</request>
    <request resultName="MULTI">dps.wms.rcvArticle.multi</request>
    <keys>
      rid
    </keys>
  </api>

</apiConfig>

