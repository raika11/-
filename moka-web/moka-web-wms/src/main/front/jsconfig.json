{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "@assets/*": ["src/assets/*"],
            "@components/*": ["src/components/*"],
            "@components": ["src/components/index.js"],
            "@layout/*": ["src/layout/*"],
            "@layout": ["src/layout/index.js"],
            "@pages/*": ["src/pages/*"],
            "@store/*": ["src/store/*"],
            "@utils/*": ["src/utils/*"]
        }
    },
    "exclude": ["./build/*", "./node_modules/*"]
}
