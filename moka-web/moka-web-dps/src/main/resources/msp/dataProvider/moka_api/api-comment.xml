  <!-- 댓글등록 -->
  <!--  <api id="comment.insert" membership="cookie" method="post" expire="0">-->
  <api id="comment.insert" membership="cookie" expire="0">
    <description>댓글을 등록한다</description>
    <parameter>
      <referrer desc="레퍼러" require="Y">^.{1,500}$</referrer>
      <totalId desc="기사ID" type="number">^[0-9]{1,9}$</totalId>
      <repSeq desc="기자SEQ" type="number">^[0-9]{1,9}$</repSeq>
      <parentSeq desc="부모댓글SEQ" type="number">^[0-9]{1,9}$</parentSeq>
      <content desc="댓글내용"></content>
      <remoteIp/>
      <regDev desc="등록기기" default="M">^.{1}$</regDev>
    </parameter>
    <request type="module" setNames="_DATA">jmnet.moka.web.dps.module.CommentModule</request>
    <keys>
      referrer
      totalId
      repSeq
      parentSeq
      content
      remoteIp
      regDev
    </keys>
  </api>

