<apiConfig>

  <!--J팟 채널 목록-->
  <api id="jpod.channel">
    <description>J팟 채널 목록을 조회한다.</description>
    <parameter>
      <name desc="채널명">^.{0,1000}$</name>
    </parameter>
    <request dmlType="sp" setNames="_DATA">dps.jpod.channel</request>
    <request type="script" resultName="_TOTAL">
      var result = $ac.getAllResult();
      result.get("PARAM_MAP").get("total");
    </request>
    <keys>
      #paging
    </keys>
  </api>

  <!--J팟 에피소드 목록-->
  <api id="jpod">
    <description>J팟 에피소드 목록을 조회한다.</description>
    <parameter>
      <id desc="채널ID" type="number" require="Y">^[0-9]{1,9}$</id>
    </parameter>
    <request dmlType="sp" setNames="_DATA">dps.jpod.episode</request>
    <request type="script" resultName="_TOTAL">
      var result = $ac.getAllResult();
      result.get("PARAM_MAP").get("total");
    </request>
    <keys>
      id
      #paging
    </keys>
  </api>

</apiConfig>

